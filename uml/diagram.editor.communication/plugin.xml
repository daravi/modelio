<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension id="diagram.communication" point="org.eclipse.e4.workbench.model">
      <fragment
            uri="e4model/diagram_communication_editor.e4xmi">
      </fragment>
      <processor beforefragment="true" class="org.modelio.diagram.editor.communication.plugin.CommunicationProcessor"/>
   </extension>

   <extension point="org.modelio.diagram.editor.inputprovider">
      <inputprovider class="org.modelio.diagram.editor.communication.editor.CommunicationDiagramEditorInputProvider"/>
   </extension>

   <extension point="org.modelio.diagram.editor.toolregistry">
      <creationtool
            id="CREATE_COMMUNICATIONNODE"
            interactor="node"
            label="%CommunicationNode.label"
            tooltip="%CommunicationNode.tooltip">
         <context
               metaclass="Standard.CommunicationNode">
         </context>
      </creationtool>
      <creationtool
            id="CREATE_COMMUNICATIONCHANNEL"
            interactor="link"
            label="%CommunicationChannel.label"
            tooltip="%CommunicationChannel.tooltip">
         <context
               metaclass="Standard.CommunicationChannel"
               router="COMMUNICATIONCHANNEL_ROUTINGMODE">
         </context>
      </creationtool>
      <creationtool
            id="CREATE_COMMUNICATIONMESSAGE"
            interactor="node"
            label="%CommunicationMessage.label"
            tooltip="%CommunicationMessage.tooltip">
         <context
               metaclass="Standard.CommunicationMessage">
         </context>
      </creationtool>
   </extension>

   	<extension point="org.modelio.creation.wizard.contributor">
		<creation
				categoryType = "%ContributorCategoryType.UML"
				categoryLabel = "%ContributorCategoryLabel.UML"
				categoryIcon = "./icons/uml.png"
				contributor="org.modelio.diagram.editor.communication.contributor.CommunicationDiagramCreationContributor">
		</creation>
	</extension>

    <extension name="Communication drop extension" point="org.modelio.diagram.editor.droppolicy.extensions">
    	<droppolicyextension class="org.modelio.diagram.editor.communication.elements.communicationdiagram.CommunicationDiagramDropEditPolicyExtension">
    		<scope editorId="org.modelio.diagram.editor.communication.CommunicationDiagramEditorID"/>
    	</droppolicyextension>
    </extension>
    
    <extension
          point="org.modelio.diagram.editor.palette">
       <palette
             id="org.modelio.diagram.editor.communication.CommunicationDiagramEditorID">
          <palette_group
                collapsible="false"
                label="main">
             <selection_tool default="true"/>
             <marquee_tool/>
             <universal_link_tool/>
          </palette_group>
          <palette_group label="%CommunicationPaletteGroup.Nodes" initialState="open">
             <creation_tool id="CREATE_COMMUNICATIONNODE"/>
             <creation_tool id="CREATE_COMMUNICATIONMESSAGE"/>
          </palette_group>
          <palette_group label="%CommunicationPaletteGroup.Links" initialState="open">
             <creation_tool id="CREATE_COMMUNICATIONCHANNEL"/>
          </palette_group>
          <palette_group label="%CommunicationPaletteGroup.InformationFlow">
             <creation_tool id="CREATE_INFORMATIONFLOW"/>
             <creation_tool id="CREATE_INFORMATIONFLOWNODE"/>
          </palette_group>
          <palette_group label="%CommunicationPaletteGroup.Common">
             <creation_tool id="CREATE_NOTE"/>
             <creation_tool id="CREATE_CONSTRAINT"/>
             <creation_tool id="CREATE_EXTERNDOCUMENT"/>
             <creation_tool id="CREATE_DEPENDENCY"/>
             <creation_tool id="CREATE_TRACEABILITY"/>
             <creation_tool id="CREATE_RELATED_DIAGRAM_LINK"/>
          </palette_group>
          <palette_group label="%CommunicationPaletteGroup.Drawings">
             <creation_tool id="CREATE_DRAWING_LINE"/>
             <creation_tool id="CREATE_DRAWING_TEXT"/>
             <creation_tool id="CREATE_DRAWING_ELLIPSE"/>
             <creation_tool id="CREATE_DRAWING_RECTANGLE"/>
          </palette_group>
       </palette>
    </extension>
    
</plugin>
